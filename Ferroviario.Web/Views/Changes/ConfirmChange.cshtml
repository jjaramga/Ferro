@model Ferroviario.Web.Models.ChangeViewModel
@{
    ViewData["Title"] = "ConfirmChange";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<br />

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Your new service</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstDriverService.Service.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstDriverService.Service.ServiceDetail.Description)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(model => model.FirstDriverService.Service.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.FirstDriverService.Service.ServiceDetail.Description)
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ConfirmChange">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <input type="hidden" asp-for="FirstDriverId" />

            <input type="hidden" asp-for="FirstDriverServiceId" />

            <input type="hidden" asp-for="SecondDriverId" />

            <input type="hidden" asp-for="SecondDriverServiceId" />

            <input type="hidden" asp-for="State" />

            <div class="form-group">
                <input type="submit" value="Accept" class="btn btn-default" asp-route-idShift="@Model.FirstDriverService.Id" 
                 asp-route-idShift2="@Model.SecondDriverService.Id" asp-route-idService="@Model.SecondDriverService.Service.Id"
                 asp-route-idService2="@Model.FirstDriverService.Service.Id"/>
            </div>
        </form>
    </div>
</div>





